<?xml version="1.0" encoding="utf-8"?>
<nrml
xmlns="http://openquake.org/xmlns/nrml/0.5"
xmlns:gml="http://www.opengis.net/gml"
>
    <sourceModel
    name="Example Source Model Containing an Area Source and a Simple Fault Source belonging to different tectonic region types"
    >
        <sourceGroup
        name="group 1"
        tectonicRegion="Active Shallow Crust"
        >
            <simpleFaultSource
            id="4"
            name="Simple Fault Source"
            tectonicRegion="Active Shallow Crust"
            >
                <simpleFaultGeometry>
                    <gml:LineString>
                        <gml:posList>
                            -0.919 -0.147
							-0.694 -0.746
                        </gml:posList>
                    </gml:LineString>
                    <dip>
                        3.0000000E+01
                    </dip>
                    <upperSeismoDepth>
                        5.0000000E+00
                    </upperSeismoDepth>
                    <lowerSeismoDepth>
                        1.5000000E+01
                    </lowerSeismoDepth>
                </simpleFaultGeometry>
                <magScaleRel>
                    WC1994
                </magScaleRel>
                <ruptAspectRatio>
                    2.0000000E+00
                </ruptAspectRatio>
                <truncGutenbergRichterMFD aValue="3.1880000E+00" bValue="6.1800000E-01" maxMag="7.5000000E+00" minMag="6.5000000E+00"/>
                <rake>
                    9.0000000E+01
                </rake>
            </simpleFaultSource>
        </sourceGroup>
        <sourceGroup
        name="group 2"
        tectonicRegion="Active Shallow Crust"
        >
            <areaSource
            id="5"
            name="Area Source"
            tectonicRegion="Active Shallow Crust"
            >
                <areaGeometry>
                    <gml:Polygon>
                        <gml:exterior>
                            <gml:LinearRing>
                                <gml:posList>
                                    -0.460 -0.915
									-0.440 -0.905
									-0.585 -0.750
									-0.591 -0.765
                                </gml:posList>
                            </gml:LinearRing>
                        </gml:exterior>
                    </gml:Polygon>
                    <upperSeismoDepth>
                        5.0000000E+00
                    </upperSeismoDepth>
                    <lowerSeismoDepth>
                        1.5000000E+01
                    </lowerSeismoDepth>
                </areaGeometry>
                <magScaleRel>
                    WC1994
                </magScaleRel>
                <ruptAspectRatio>
                    1.0000000E+00
                </ruptAspectRatio>
                <truncGutenbergRichterMFD aValue="3.1880000E+00" bValue="6.1800000E+00" maxMag="7.0000000E+00" minMag="5.0000000E+00"/>
                <nodalPlaneDist>
                    <nodalPlane dip="9.0000000E+01" probability="1.0000000E+00" rake="0.0000000E+00" strike="0.0000000E+00"/>
                </nodalPlaneDist>
                <hypoDepthDist>
                    <hypoDepth depth="1.5000000E+01" probability="1.0000000E+00"/>
                </hypoDepthDist>
            </areaSource>
        </sourceGroup>
    </sourceModel>
</nrml>
